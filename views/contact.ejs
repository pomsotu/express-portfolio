<h1 class="mb-3">Contact Me</h1>

<% if (sent) { %>
<div class="alert alert-success">Thanks! Your message was received.</div>
<% } %>

<form class="bg-white p-4 rounded shadow-sm" method="POST" action="/contact">
  <div class="mb-3">
    <label for="name" class="form-label">Name *</label>
    <input id="name" name="name" type="text" class="form-control" required>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email *</label>
    <input id="email" name="email" type="email" class="form-control" required>
  </div>
  <div class="mb-3">
    <label for="phone" class="form-label">Phone</label>
    <input id="phone" name="phone" type="tel" class="form-control" placeholder="+1 (555) 555-5555">
  </div>
  <div class="mb-3">
    <label for="message" class="form-label">Message *</label>
    <textarea id="message" name="message" class="form-control" rows="4" required></textarea>
  </div>
  <button class="btn btn-primary"><i class="fa-solid fa-paper-plane"></i> Send</button>
</form>